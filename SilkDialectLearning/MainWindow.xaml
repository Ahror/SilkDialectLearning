<Window x:Class="SilkDialectLearning.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="597" Width="852">
    <Grid>
        <Button Content="Button" HorizontalAlignment="Left" Height="54" Margin="752,36,0,0" VerticalAlignment="Top" Width="82" Click="Button_Click"/>
        <ListBox HorizontalAlignment="Left" Height="129" Margin="21,36,0,0" VerticalAlignment="Top" Width="80" ItemsSource="{Binding Path=Languages}" SelectionChanged="Languages_SelectionChanged"></ListBox>
        <ListBox HorizontalAlignment="Left" Height="129" Margin="106,36,0,0" VerticalAlignment="Top" Width="88" ItemsSource="{Binding Path=Levels}" SelectionChanged="Levels_SelectionChanged_1"/>
        <ListBox HorizontalAlignment="Left" Height="129" Margin="199,36,0,0" VerticalAlignment="Top" Width="95" ItemsSource="{Binding Path=Units}" SelectionChanged="Units_SelectionChanged_2">
        </ListBox>
        <ListBox HorizontalAlignment="Left" Height="129" Margin="299,36,0,0" VerticalAlignment="Top" Width="97" ItemsSource="{Binding Path=Lessons}" SelectionChanged="Lessons_SelectionChanged_3"/>
        <ListBox HorizontalAlignment="Left" Height="129" Margin="401,36,0,0" VerticalAlignment="Top" Width="90" ItemsSource="{Binding Path=SceneViewModel.Scenes}" SelectionChanged="Scenes_SelectionChanged_4"/>
        <ListBox HorizontalAlignment="Left" Height="129" Margin="496,36,0,0" VerticalAlignment="Top" Width="96" ItemsSource="{Binding Path=SceneViewModel.SceneItems}" SelectionChanged="SceneItems_SelectionChanged_5"/>
        <Grid HorizontalAlignment="Left" Height="377" Margin="21,179,0,0" VerticalAlignment="Top" Width="669" Name="grdScene">
            <Image Name="img"/>
            <Grid Name="front" Background="Black" Width="{Binding ActualWidth, ElementName=img, Mode=OneWay}" Height="{Binding ActualHeight, ElementName=img, Mode=OneWay}" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        </Grid>
        <RadioButton Content="Learn" HorizontalAlignment="Left" Height="18" Margin="642,36,0,0" VerticalAlignment="Top" Width="110" Checked="RadioButton_Checked"/>
        <RadioButton Content="Practice" HorizontalAlignment="Left" Height="18" Margin="642,59,0,0" VerticalAlignment="Top" Width="110" Checked="RadioButton_Checked"/>
    </Grid>
</Window>
